<h1>Value your Offer</h1>

<div>
  <div>
    <h2>
      Add a new offer
    </h2>

    <form action="insert_compensation_plan" method="post">
      <div>
        <label for="company_name_box">
          Company name
        </label>

        <input type="text" id="company_name_box" name="query_company_name">
      </div>

      <div>
        <label for="stock_type">
          Stock Type
        </label>

        <input type="text" id="stock_type_box" name="query_stock_type">
      </div>

      <div>
        <label for="strike_price">
          Strike Price
        </label>

        <input type="text" id="strike_price" name="query_strike_price">
      </div>

      <div>
        <input type="text" id="vesting_years" name="query_vesting_years" value="1">

        <label for="vesting_years">Vesting Years</label>
      </div>

      <div>
        <label for="last_round_type_box">
          Last round type
        </label>

        <input type="text" id="last_round_type_box" name="query_last_round_type">
      </div>

      <div>
        <label for="valuation_box">
          Valuation
        </label>

        <input type="text" id="valuation_box" name="query_valuation">
      </div>

      <div>
        <label for="deal_date_box">
          Deal date
        </label>

        <input type="date" id="deal_date_box" name="query_deal_date">
      </div>

      <button>
        Create company
      </button>
    </form>
  </div>
</div>
